<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="androidx.lifecycle.LiveData" />

        <import type="com.mustafa.movieguideapp.models.entity.Movie" />

        <import type="com.mustafa.movieguideapp.models.Resource" />

        <import type="com.mustafa.movieguideapp.models.Status" />

        <import type="java.util.List" />

        <variable
            name="selectedFilters"
            type="String" />

        <variable
            name="resource"
            type="Resource" />

        <variable
            name="callback"
            type="com.mustafa.movieguideapp.view.ui.common.RetryCallback" />

        <variable
            name="totalFilterResult"
            type="LiveData&lt;String>" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundDarker"
            android:clipToPadding="true"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundDarker"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/filters_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toStartOf="@id/edit_filters"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{selectedFilters}"
                        android:textColor="@color/white"
                        tools:text="Mustafa" />

                    <TextView
                        android:id="@+id/edit_filters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorPrimary"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="5dp"
                        android:text="@string/edit"
                        android:textSize="20sp" />
                </RelativeLayout>

                <include layout="@layout/snippet_separator" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/total_filter_results"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:text="@{totalFilterResult}"
                                android:textColor="@color/white"
                                tools:text="956,564" />

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="@string/results"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/sort_by_text_view"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/preview"
                            tools:text="Sorted by Popularity" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/sort_by_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="?attr/actionBarItemBackground"
                        android:foreground="?attr/actionBarItemBackground"
                        android:src="@drawable/ic_filter"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>

                <include layout="@layout/snippet_separator" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/filtered_items_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            layout="@layout/loading_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:callback="@{() -> callback.retry()}"
            app:resource="@{(Resource) resource}" />

    </RelativeLayout>

</layout>
